<!--pages/dataShow/index.wxml-->
<view class="dataShow-wrapper">
    <view class="title">
        <text class="text">数据总览</text>
        <image 
            class="loading"
            mode="widthFix"
            style="width:30%"
            src="../../resource/icon/loading.png"
        ></image>
    </view>
    <image 
        class="calendar"
        mode="widthFix"
        style="width:4%"
        src="../../resource/icon/calendar.png"
    ></image>
    <text class="date">{{time}}</text>
    <van-dropdown-menu class="dropdown" active-color="#3656E6">
        <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
        <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" />
    </van-dropdown-menu>
</view>

