/* pages/dataShow/index.wxss */
page {
    height: 100%;
    width: 100%;
    background-color: rgb(240, 238, 241);
}
.dataShow-wrapper {
    width: 100%;
    height: 30%;
    background-color: #3656E6;
    position: relative;
    top: 0;
}
.dataShow-wrapper .title{
    position: absolute;
    bottom: 55%;
    left: 50%;
    transform: translateX(-50%);
}
.dataShow-wrapper .title .text{
    font-size:14px;
    color: #fff;
    font-weight:bold;
    letter-spacing:5px;
}
.dataShow-wrapper .title .loading{
    position: absolute;
}
.dataShow-wrapper .calendar {
    position: absolute;
    bottom: 40%;
    left: 35%;
    transform: translateX(-50%);
}
.dataShow-wrapper .date {
    position: absolute;
    bottom: 40%;
    left: 53%;
    transform: translateX(-50%);
    font-size:10px;
    color: #fff;
}

.dataShow-wrapper .dropdown {
    width: 80%;
    position: absolute;
    left: 10%;
    top: 80%;
    font-size:5px;
    background-color:aqua;
    border-radius: 50px; 
}

.dataShow-main {
    width: 90%;
    height: 50%;
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translateX(-50%);
    background-color: white;
    border-radius: 15px;
}

