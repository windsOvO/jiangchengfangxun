/* pages/inforLibrary/index.wxss */
page {
    height: 100%;
    width: 100%;
    background-color: rgb(240, 238, 241);
}
.infor-wrapper {
    width: 100%;
    height: 30%;
    background-color: #3656E6;
    position: relative;
    top: 0;
}
.infor-wrapper .title{
    position: absolute;
    bottom: 55%;
    left: 50%;
    transform: translateX(-50%);
}
.infor-wrapper .title .text{
    font-size:14px;
    color: #fff;
    font-weight:bold;
    letter-spacing:5px;
}
.infor-wrapper .title .loading{
    position: absolute;
}
.infor-wrapper .calendar {
    position: absolute;
    bottom: 40%;
    left: 35%;
    transform: translateX(-50%);
}
.infor-wrapper .date {
    position: absolute;
    bottom: 40%;
    left: 53%;
    transform: translateX(-50%);
    font-size:10px;
    color: #fff;
}

.infor-card {
    width: 80%;
    height: 20%;
    position: absolute;
    top: 22%;
    left: 50%;
    transform: translateX(-50%);
    background-color: white;
    border-radius: 15px;
}
